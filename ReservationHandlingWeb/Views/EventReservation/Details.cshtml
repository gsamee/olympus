@model ReservationHandlingWeb.Models.UserMain

@{
    ViewData["Title"] = "Details";
}

<div>
    <h4>Event Registration</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Phone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Phone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EventTypeID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EventType.Type)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SetUpID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EventSetup.SetUp)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.HallID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HallDetail.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EventDate)
        </dt>
        <dd class="col-sm-10">
            @Html.Raw(Model.EventDate.ToString("MM/dd/yyyy"))
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.InviteDate)
        </dt>
        <dd class="col-sm-10">
            @Html.Raw(Model.InviteDate.ToString("MM/dd/yyyy"))
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Remarks)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Remarks)
        </dd>
    </dl>
</div>
<div>
    <a type="button" class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.ID">Edit</a>
    <a type="button" class="btn btn-secondary" asp-action="Index">Back to List</a>
</div>
